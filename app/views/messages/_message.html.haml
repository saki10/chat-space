.messages-box{data: {message: {id: message.id}}}
  .messages-box-top
    .messages-box-top-name 
      = message.user.name
    .messages-box-top-date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .messages-box-text 
    - if message.content.present?
      %p.Message__content
        = message.content
    = image_tag message.image.url, class: 'Message__image' if message.image.present?
    